<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <AssemblyName>config-assets.sourcegen</AssemblyName>
        <RootNamespace>ConfigAssets.Sourcegen</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.CodeAnalysis" Version="3.8.0" />
    </ItemGroup>

    <Target Name="Copy to plugins" AfterTargets="Build">
        <ItemGroup>
            <PluginFiles Include="$(TargetDir)*.dll" />
            <PluginDir Include="../../unity/Assets/config-assets/Plugins" />
        </ItemGroup>
        
        <Message Text="Copying $(OutputPath)*.dll to @(PluginDir)" />
        <Copy SourceFiles="@(PluginFiles)" DestinationFolder="@(PluginDir)" />
    </Target>

</Project>
